<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ナンバープレート</th>
      <th>Keeping place</th>
      <th>Condition</th>
      <th>保管期限</th>
      <th>Memo</th>
      <th>Status</th>
      <th>Jikken</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @syaryos.each do |syaryo| %>
    <% if syaryo.deadline.present? and syaryo.deadline < Date.today %>
      <tr class="warning_color">
    <% else %>
      <tr>
    <% end %>
        <td><%= syaryo.number_plate %></td>
        <td><%= syaryo.keeping_place %></td>
        <td><%= syaryo.condition.name %></td>
        <td><%= syaryo.deadline %></td>
        <td><%= syaryo.memo %></td>
        <td><%= syaryo.status %></td>
        <td><%= syaryo.jikken_id %></td>
        <td><%= link_to 'Show', syaryo %></td>
        <td><%= link_to 'Edit', edit_syaryo_path(syaryo) %></td>
        <td><%= link_to 'Destroy', syaryo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
